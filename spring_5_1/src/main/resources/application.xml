<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="student1" class="com.lgy.spring_5_1.Student">
		<constructor-arg>
			<value>홍길동</value>
		</constructor-arg>
		<constructor-arg>
			<value>10</value>
		</constructor-arg>
		<constructor-arg>
			<value>3grade</value>
		</constructor-arg>
		<constructor-arg>
			<value>2class</value>
		</constructor-arg>
	</bean>
	<bean id="student2" class="com.lgy.spring_5_1.Student">
		<constructor-arg value="gill dong"></constructor-arg>
		
		<constructor-arg value="11"></constructor-arg>
		
		<constructor-arg value="4grade"></constructor-arg>

		<constructor-arg value="3class"></constructor-arg>
	</bean>
	
	<bean id = "studentInfo" class="com.lgy.spring_5_1.StudentInfo">
		<constructor-arg>
			<ref bean="student1" />
		</constructor-arg>
	</bean>

</beans>
